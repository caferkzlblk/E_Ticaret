@model IEnumerable<Supplier>
@{
    ViewData["Title"] = "SupplierIndex";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<p>
			<a asp-action="SupplierCreate" asp-controller="Admin" class="btn btn-success ">New Brand</a>
		</p>

		<div class="portlet box red">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-cogs"></i>BRAND LIST
				</div>
				<div class="tools">
					<a href="javascript:;" class="collapse">
					</a>
					<a href="#portlet-config" data-toggle="modal" class="config">
					</a>
					<a href="javascript:;" class="reload">
					</a>
					<a href="javascript:;" class="remove">
					</a>
				</div>
			</div>
			<div class="portlet-body">
				<div class="table-scrollable">
					<table class="table table-hover">
						<thead>
							<tr style="background-color:gray;color:white">
								<th>
									@Html.DisplayNameFor(model => model.SupplierID)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.BrandName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.PhotoPath)

								</th>
								<th>
									@Html.DisplayNameFor(model => model.IsActive)

								</th>
								<th></th>
								<th></th>
								<th></th>
								<th></th>
							</tr>
						</thead>

						<tbody>

							@foreach (var item in Model)
							{
								<tr>
									<td>
										@Html.DisplayFor(model => item.SupplierID)
									</td>
									<td>
										 @Html.DisplayFor(model => item.BrandName) 
									</td>
									<td>
										<img src="~/resimler/@item.PhotoPath" height="35" width="60" />
										
									</td>
									@if (item.IsActive)
									{
										<td>
											<label style="background-color:green; color:white">ACTIVE</label>
										</td>

									}
									else
									{
										<td>
											<label style="background-color:orangered; color:white">NOT ACTIVE</label>
										</td>
									}


									<td>
										<a asp-action="SupplierEdit" asp-route-id="@item.SupplierID" class="btn btn-primary">EDIT</a>

									</td>
									<td>
										<a asp-action="SupplierDetails" asp-route-id="@item.SupplierID" class="btn btn-info">DETAILS</a>

									</td>
									<td>
										<a asp-action="SupplierDelete" asp-route-id="@item.SupplierID" class="btn btn-danger">DELETE</a>

									</td>
								</tr>
								

									}
								}
							}

						</tbody>




					</table>
				</div>
			</div>
		</div>

	</div>

</div>
