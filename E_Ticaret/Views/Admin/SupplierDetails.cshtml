@model Supplier
@{
    ViewData["Title"] = "SupplierDetails";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
	<div class="col-md-2"></div>

	<div class="col-md-8">
		<div class="portlet box green">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-cogs"></i> <span style="background-color:red color:white;">@ViewBag.supplier</span> Detail
				</div>


				<div class="tools">
					<a href="javascript:;" class="collapse">
					</a>
					<a href="#portlet-config" data-toggle="modal" class="config">
					</a>
					<a href="javascript:;" class="reload">
					</a>
					<a href="javascript:;" class="remove">
					</a>
				</div>
			</div>
			<div class="portlet-body flip-scroll">
				<table class="table table-bordered table-striped table-condensed flip-content">
					<thead class="flip-content">
						
						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.SupplierID)
							</th>
							<th>
								@Html.DisplayFor(model => model.SupplierID)
							</th>

						</tr>
						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.BrandName)
							</th>
							<th>
								@Html.DisplayFor(model => model.BrandName)
							</th>

						</tr>
						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.PhotoPath)
							</th>

							<th>
								<img src="~/resimler/@Model.PhotoPath" height="35" width="60" />

							</th>
							
							

						</tr>
						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.IsActive)
							</th>
							<th>
								@Html.DisplayFor(model => model.IsActive)
							</th>

						</tr>

					</thead>

				</table>
				<div class="form-actions right">
					<a asp-action="SupplierIndex" class="btn btn-primary">Brand List</a>
				</div>
			</div>
		</div>
	</div>
</div>

