@model Category

@{
    ViewData["Title"] = "CategoryDelete";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		

		<div class="portlet box red">
			<div class="portlet-body">
				<div class="table-scrollable">
                    <table class="table table-dark table-hover">
                        <thead>
                            <tr style="background-color:gray;color:white">
                                <th>Category ID</th>
                                <th>Category Name</th>
                                <th>Is Active</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(model => model.CategoryID)</td>
                                <td>@Html.DisplayFor(model => model.CategoryName)</td>
                                <td>@Html.DisplayFor(model => model.IsActive)</td>
                            </tr>
                        </tbody>
                    </table>

					<form asp-action="CategoryDelete" method="post">
						<input type="hidden" asp-for="CategoryID" />
						<input type="submit" value="DELETE" class="btn btn-danger" onclick="return confirm('Are you sure ?')"  />
						<a asp-action="CategoryIndex" class="btn btn-success">Back to the Category List</a>
					</form>


				</div>
			</div>
		</div>

	</div>

</div>

