@model Status
@{
    ViewData["Title"] = "StatusDetails";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
	<div class="col-md-2"></div>

	<div class="col-md-8">
		<div class="portlet box green">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-cogs"></i> <span style="background-color:red color:white;">@ViewBag.status</span> Detail
				</div>


				<div class="tools">
					<a href="javascript:;" class="collapse">
					</a>
					<a href="#portlet-config" data-toggle="modal" class="config">
					</a>
					<a href="javascript:;" class="reload">
					</a>
					<a href="javascript:;" class="remove">
					</a>
				</div>
			</div>
			<div class="portlet-body flip-scroll">
				<table class="table table-bordered table-striped table-condensed flip-content">
					<thead class="flip-content">

						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.StatusID)
							</th>
							<th>
								@Html.DisplayFor(model => model.StatusID)
							</th>

						</tr>
						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.StatusName)
							</th>
							<th>
								@Html.DisplayFor(model => model.StatusName)
							</th>

						</tr>

						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.IsActive)
							</th>
							<th>
								@Html.DisplayFor(model => model.IsActive)
							</th>

						</tr>

					</thead>

				</table>
				<div class="form-actions right">
					<a asp-action="StatusIndex" class="btn btn-primary">Status List</a>
				</div>
			</div>
		</div>
	</div>
</div>

