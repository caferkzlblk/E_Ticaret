@model Supplier
@{
    ViewData["Title"] = "SupplierEdit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-8">

		<div class="portlet box purple ">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-gift"></i> Supplier Update Form
				</div>
				<div class="tools">
					<a href="" class="collapse">
					</a>
					<a href="#portlet-config" data-toggle="modal" class="config">
					</a>
					<a href="" class="reload">
					</a>
					<a href="" class="remove">
					</a>
				</div>
			</div>
			<div class="portlet-body form">
				<form class="form-horizontal" role="form" action="/Admin/SupplierEdit" method="post">

					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-body">
						
						<div class="form-group">

							<label class="col-md-3 control-label" asp-for="BrandName"></label>
							<div class="col-md-9">
								
								<input asp-for="BrandName" class="form-control input-lg" placeholder="Brand Name" required maxlength="100" />
							</div>
							<span asp-validation-for="BrandName" class="text-danger"></span>
						</div>

						<div class="form-group">

							<label class="col-md-3 control-label" asp-for="PhotoPath"></label>
							<div class="col-md-9">
								
								<input type="file" asp-for="PhotoPath" class="form-control input-lg"  />
							</div>
							<span asp-validation-for="BrandName" class="text-danger"></span>
						</div>
						<div class="form-group">

							<label class="col-md-3 control-label" asp-for="IsActive"></label>
							<div class="col-md-9">
								<input asp-for="IsActive" class="form-control input-lg" />
							</div>
							<input type="hidden" asp-for="SupplierID" />
						</div>
					</div>

					<input type="hidden" asp-for="SupplierID" />

					<div class="form-actions right">
						<a asp-action="SupplierIndex" class="btn btn-primary">BRAND LIST></a>
						<input type="submit" value="SAVE" class="btn btn-success" />

					</div>
				</form>
			</div>
		</div>

	</div>
</div>

