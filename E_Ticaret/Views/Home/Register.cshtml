@model User
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

<div class="checkout-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="row">
                    <div class="all-out-area">
                        <div class="col-sm-12 col-md-4 col-lg-3"></div>
                        <div class="col-sm-12 col-md-4 col-lg-6">
                            <div class="bt-info" style="border-color:black;">
                                <h3 class="proopc-process-title"><span class="proopc-step">i</span>REGISTER</h3>
                                <div class="chek-full-info">
                                    <div class="inner-wrap">
                                        <div class="edit-address">
                                            <form action="@Url.Action("Register","Home")" method="post">
                                                <div>
                                                    <div class="inner">
                                                        <label class="email">Name Surname</label>
                                                        <input type="text" name="NameSurname">
                                                    </div>
                                                </div>

                                                <div>
                                                    <div class="inner">
                                                        <label class="email">Email</label>
                                                        <input type="text" name="Email" maxlength="100" required>
                                                    </div>
                                                </div>

                                                <div>
                                                    <div class="inner">
                                                        <label class="email">Password</label>
                                                        <input type="password" name="Password" maxlength="100" required>
                                                    </div>
                                                </div>

                                                <div>
                                                    <div class="inner">
                                                        <label class="email">Phone</label>
                                                        <input type="text" name="Telephone" maxlength="100" required>
                                                    </div>
                                                </div>

                                                <div>
                                                    <div class="inner">
                                                        <label class="email">Adress</label>
                                                        <textarea typeof="text" name="InvoiceAddress" required cols="80" rows="4"></textarea>
                                                    </div>
                                                </div>

                                                <div class="submit_crt">
                                                    <input type="submit" value="Register" class="update-cart"/>
                                                </div>


                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

